{
    "name": "@valksor/valksor",
    "version": "0.0.2",
    "description": "Valksor Components",
    "main": "dist/index.cjs.js",
    "module": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "collection:main": "dist/collection/index.js",
    "unpkg": "dist/valksor/valksor.esm.js",
    "style": "dist/valksor/valksor.css",
    "exports": {
        ".": {
            "import": "./dist/valksor/valksor.esm.js",
            "require": "./dist/cjs/valksor.cjs.js",
            "types": "./dist/types/index.d.ts"
        },
        "./loader": {
            "import": "./loader/index.js",
            "require": "./loader/index.cjs",
            "types": "./loader/index.d.ts"
        },
        "./components": {
            "import": "./dist/components/index.js",
            "types": "./dist/components/index.d.ts"
        },
        "./components/*": {
            "import": "./dist/components/*.js",
            "types": "./dist/components/*.d.ts"
        },
        "./latvian-flag": {
            "import": "./dist/components/latvian-flag.js",
            "types": "./dist/components/latvian-flag.d.ts"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/valksor/stencil-valksor.git"
    },
    "files": [
        "dist/",
        "loader/"
    ],
    "scripts": {
        "build": "bun run gen.mjs && bun run build.local.css && bun run build.css && stencil build",
        "build.css": "tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/components.min.css --minify",
        "build.local.css": "tailwindcss -i ./src/styles/local.css -o ./src/styles/index.min.css --minify",
        "bump": "npx npm-check-updates -u --reject jest,jest-cli,@types/jest",
        "gen.mjs": "bun ./gen.mjs",
        "generate": "stencil generate",
        "lint": "./node_modules/.bin/prettier --write",
        "start": "bun run gen.mjs && bun run build.local.css && bun run build.css && stencil build --dev --watch --serve",
        "start.watch": "concurrently \"bun run watch.gen\" \"bun run watch.tailwind\" \"bun run watch.tailwind.local\" \"stencil build --dev --watch --serve\"",
        "test": "stencil test --spec",
        "test.watch": "stencil test --spec --watchAll",
        "watch.gen": "bun ./scripts/watch-gen.mjs",
        "watch.tailwind": "tailwindcss -i ./src/styles/tailwind.css -o ./src/styles/components.min.css --minify --watch",
        "watch.tailwind.local": "tailwindcss -i ./src/styles/local.css -o ./src/styles/index.min.css --minify --watch"
    },
    "devDependencies": {
        "@stencil/core": "^4.38.3",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "@types/jest": "^29.5.14",
        "@types/node": "^24.10.1",
        "autoprefixer": "^10.4.22",
        "chokidar": "^4.0.3",
        "concurrently": "^9.2.1",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "postcss": "^8.5.6",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "puppeteer": "^24.30.0",
        "tailwindcss": "^4.1.17"
    },
    "license": "BSD-3-Clause",
    "dependencies": {
        "caniuse-lite": "latest",
        "tailwind-merge": "^3.4.0"
    }
}
